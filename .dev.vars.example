# Copy to .dev.vars in this directory for local dev. Production secrets should be stored with `wrangler secret put`.

# Cloudflare account
CLOUDFLARE_ACCOUNT_ID="cf_account_id"
CLOUDFLARE_API_TOKEN="cf_api_token_with_workers_ai"

# Workers AI / AI Gateway
CF_AIG_TOKEN="cf_workers_ai_token"
AI_GATEWAY_TOKEN="cf_ai_gateway_token"
AI_GATEWAY_ID="ai-gateway"

# Third-party LLM providers
OPENAI_API_KEY="openai_api_key"
ANTHROPIC_API_KEY="anthropic_api_key"

# Vectorize indexes (if overriding defaults)
VECTORIZE_PROFILE_INDEX="rnbwsmk-profile-data"
VECTORIZE_CONTENT_INDEX="rnbwsmk-site-content"
VECTORIZE_PRODUCTS_INDEX="rnbwsmk-products"

# R2 bucket (knowledge base uploads)
DOCUMENTS_BUCKET="rnbwsmk-knowledge-base"
S3_API_URL="https://<account>.r2.cloudflarestorage.com"
ACCESS_KEY_ID="r2_access_key_id"
SECRET_ACCESS_KEY="r2_secret_access_key"

# PartyKit / WebSocket auth (if applicable)
PARTYKIT_SERVER_TOKEN="partykit_token"

# Default models (non-secret overrides)
DEFAULT_MODEL="@cf/meta/llama-3.3-70b-instruct-fp8-fast"
PREMIUM_MODEL="openai/gpt-4o"
EMBEDDING_MODEL="@cf/baai/bge-base-en-v1.5"
